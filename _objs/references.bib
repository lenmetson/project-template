	keywords = {Political campaigns, United States, Political participation, Politics and government, Election, Presidents, 2008, 2012, Obama, Barack, {POLITICAL} {SCIENCE} / Government / National, {POLITICAL} {SCIENCE} / Political Process / Elections},
